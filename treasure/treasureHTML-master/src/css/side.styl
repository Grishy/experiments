#side
	min-height 100vh
	width 300px
	background-color #f6f9fa
	
	@media screen and (max-width: 1030px)
		display none
	#logo
		margin-left 20%
		margin-bottom 0
		width 60%
	#title
		text-align center
		letter-spacing 5px
		font-size 1.3em
		transition-duration 0.8s
		color black
		&:hover
			color #505d62
#header
	background-color #fff
	padding-top 30px
	padding-bottom 30px

#categories
	width 100%
	ul
		background-color #fff
		margin 0
		padding 0
		list-style none
	li
		border-top 1px solid #ebebeb
		&:hover
			cursor pointer
			a
				margin-left 5px
				color #50aa6b
		a
			padding-left 20px
			width 100%
			color #111433
			line-height 50px
			transition-duration 0.1s

.sl-search
	input
		padding-left 20px
		width 100%
		height 50px
		background-color #ebebeb
		color #808080
		border none
		transition-duration 0.1s
		&:focus
			color #111433
			outline none

.sl-divider
	background-color #f6f9fa
	color #b3b3b3
	padding-left 15px
	padding-top 8px
	padding-bottom 8px
	font-size 0.7rem
	font-weight bold
	letter-spacing 1px
	text-transform uppercase
	
	&:hover
		cursor auto !important

.sl-all
	background-color #82adda
	transition-duration 0.3s
	display block
	text-align center
	a
		color #fff !important
		padding-left 0 !important
		margin 0 !important
	&:hover
		background-color #72a2d5
.sl-add
	background-color #50aa6b
	transition-duration 0.3s
	display block
	text-align center
	a
		color #fff !important
		padding-left 0 !important
		margin 0 !important
	&:hover
		background-color #418b57

.has-children
	transition-duration 0.1s
	svg
		width 22px
		height 22px
		float right
		margin-top 14px
		margin-right 8px
		transition-duration 0.2s
	&:hover
		box-shadow inset 2px 0 0 #50aa6b
		svg
			fill #50aa6b
			margin-right 4px

