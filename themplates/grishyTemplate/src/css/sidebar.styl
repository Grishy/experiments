.sidebar
	position fixed
	top 0
	left 0
	width 250px
	height 100%
	background-color #f0f0f0
	padding 32px 0
	display flex
	align-items center
	text-align center
	line-height 25px

	&:after,
	&:before
		display table
		clear both
		content ' '
	//TITLE
	.sidebar-row
		width 100%
		float left
		position relative
		
		.sidebar-title-title
			display block
			font-size 22px
			margin-bottom 16px
			font-weight 400
			
			a
				transition .4s
				letter-spacing 1px
				color #222
				
				&:hover
					color: #7E7E7E

		.sidebar-title-description
			font-size 14px
			line-height 19px
			margin-bottom 25px
			padding-bottom 25px
			border-bottom 1px solid #DADFE1
	//END TITLE
	//NAV
	.sidebar-nav
		margin-bottom 25px
		padding-bottom 25px
		border-bottom 1px solid #DADFE1
		
		ul
			list-style none
			margin 0
			padding 0
		
		li
			display block
			margin-bottom 8px
			font-size 16px
			line-height 25px
			
		a
			&::after, &::before
				display inline-block
				opacity 0
				transition transform 0.3s, opacity 0.2s
			
			&::before
				margin-right 5px
				content '['
				transform translateX(15px)
			&::after
				margin-left 5px
				content ']'
				transform translateX(-15px)
				
			&:hover::before, &:hover::after, &:focus::before, &:focus::after
				opacity 1
				transform translateX(0px)

		
	//END NAV
		
	//SOCIAL
	.sidebar-social
		margin-bottom 25px
		list-style none
		padding 0
		margin: 0 0 32px
		
		li
			display inline-block
			margin-right 14px
		i
			font-size 22px
	//END SOCIAL
		
//BOTTOM
.sidebar-bottom
	position absolute
	bottom 32px
	text-align center
//END BOTTOM