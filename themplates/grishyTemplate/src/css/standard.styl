::selection
	background #373b43
	color #fff
	
body
	background #fff
	font-family 'Open Sans', Arial, Helvetica, sans-serif

a
	transition .4s
	text-decoration none
	color #222
	
	&:hover
		color #7E7E7E
.title
	font-family 'Podkova', serif
	font-weight bold
	color #222
	font-size 22px
	line-height 50px
	width: 50%;
	float: left;
	
	.point
		color #f47e00
		
.row
	padding-left 16px
	padding-right 16px
	margin 0 auto
	max-width 1100px
	
	&:after,
	&:before
		display table
		clear both
		content ' '

.column
	float left
	width 100%
	padding-right 13px
	padding-left 13px

.text-center
	text-align center
	
.list-bare
	margin 0
	padding 0