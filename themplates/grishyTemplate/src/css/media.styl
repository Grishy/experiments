@media only screen and (max-width: 64em) {
    .logo {
        line-height: 25px;
        margin-bottom: 0;
    }
    .sidebar {
        border-bottom: 1px solid #ecf0f1;
        background-color: #fff;
    }
    .sidebar__description {
        display: none;
    }
    .sidebar__navigation li {
        line-height: 32px;
        display: block;
        margin-right: 0;
        text-align: center;
    }
    .sidebar__navigation a {
        display: block;
        padding-top: 8px;
        padding-bottom: 8px;
        border-bottom: 1px solid #ecf0f1;
    }
    .sidebar__navigation {
        margin-bottom: 8px;
    }
    .sidebar__social-nav {
        text-align: center;
    }
    .home-template .sidebar {
        border-bottom: 1px solid #ecf0f1;
    }
    .off-canvas-toggle {
        font-size: 14px;
        position: absolute;
        top: 50%;
        right: 22px;
        display: block;
        cursor: pointer;
        -webkit-transform: translateY(-50%);
        transform: translateY(-50%);
    }
    body,
    html {
        overflow-x: hidden;
    }
    .off-canvas-content {
        position: fixed;
        top: 0;
        right: 0;
        width: 250px;
        height: 100%;
        -webkit-transition: all .4s cubic-bezier(.16, .63, .45, .98) 0s;
        transition: all .4s cubic-bezier(.16, .63, .45, .98) 0s;
        -webkit-transform: translate3d(0, 0, 0) translateX(250px);
        transform: translate3d(0, 0, 0) translateX(250px);
        border-left: 1px solid #ecf0f1;
        background-color: #fff;
    }
    .off-canvas-container {
        -webkit-transition: all .4s cubic-bezier(.16, .63, .45, .98) 0s;
        transition: all .4s cubic-bezier(.16, .63, .45, .98) 0s;
        -webkit-transform: translate3d(0, 0, 0) translateX(0);
        transform: translate3d(0, 0, 0) translateX(0);
    }
    .off-canvas-container.is-active {
        -webkit-transform: translate3d(0, 0, 0) translateX(-250px);
        transform: translate3d(0, 0, 0) translateX(-250px);
    }
}
