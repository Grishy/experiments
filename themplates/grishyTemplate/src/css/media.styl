    h2,
    h3,
    h4,
    h5,
    h6 {
        font-size: 16px;
    }
    hr,
    ol,
    p,
    ul {
        margin: 0 0 25px;
    }
    blockquote {
        padding: 0 44px;
    }
    .post-content .fluid-width-video-wrapper,
    .post-content .twitter-tweet,
    .post-content iframe,
    .post-content img {
        margin-bottom: 22px;
    }
    pre {
        margin-bottom: 22px;
        padding: 25px;
    }
    .post-card__image {
        margin-bottom: 13px;
    }
    .share-list {
        margin-bottom: 25px;
    }
    .author-image .img {
        width: 64px;
        height: 64px;
    }
    .post__title {
        font-size: 19px;
        line-height: 32px;
    }
    .search-form-container__close {
        top: 16px;
        right: 16px;
    }
    .search-form__field {
