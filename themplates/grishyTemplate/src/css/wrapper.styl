.wrapper
  flex 1 0 auto
  padding 32px 0
  margin-left 250px

.post-list
  display flex
  flex-wrap wrap
  padding-left 16px
  padding-right 16px
  .post-card-wrap
    &:nth-child(3n + 2)
        .post-card
          &:after
            content ''
            display block
            position absolute
            top 0
            bottom 64px
            width 1px
            background linear-gradient(45deg, border_color 25%, transparent 25%), linear-gradient(-45deg, border_color 25%, transparent 25%), linear-gradient(45deg, transparent 75%, border_color 75%), linear-gradient(-45deg, transparent 75%, border_color 75%)
            background-size 2px 2px
            background-position 0 0, 1px 0, 1px -1px, 0px 1px
            right -0.5px
          &:before
            content ''
            display block
            position absolute
            top 0
            bottom 64px
            width 1px
            background linear-gradient(45deg, border_color 25%, transparent 25%), linear-gradient(-45deg, border_color 25%, transparent 25%), linear-gradient(45deg, transparent 75%, border_color 75%), linear-gradient(-45deg, transparent 75%, border_color 75%)
            background-size 2px 2px
            background-position 0 0, 1px 0, 1px -1px, 0px 1px
            left -0.5px

.post-card-wrap
  display flex
  width 33.33333%
  float left
  position relative

.post-card
  width 100%
  padding-right 16px
  padding-left 16px
  margin-bottom 16px
  text-align center
  a
    &:hover
      color #7e7e7e

.post-card-img
  background-color #fafafa
  margin-bottom 16px
  transition 0.4s

.post-card-date
  margin-bottom 8px
  font-size 14px
  line-height 22px
  color #7e7e7e

.post-card-title
  font-size 18px
  line-height 24px
  margin-top 0
  margin-bottom 0
  font-weight 300
  margin 0 0 24px
  a
    display block
    border-bottom none
    transition 0.4s
    padding-bottom 22px
    border-bottom 1px solid border_color
    &:hover
      color #a60505

